<h1>Listing words</h1>

<table>
  <tr>
    <th>Problem</th>
    <th>Answer</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @words.each do |word| %>
  <tr>
    <td><%= word.problem %></td>
    <td><%= word.answer %></td>
    <td><%= word.type_name %></td>
    <td><%= link_to 'Show', word%></td>
    <td><%= link_to 'Edit', edit_word_path(word) %></td>
    <td><%= link_to 'Destroy', word, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Word', new_word_path %>

<br />
<%= form_tag({:action => 'index'}, {method: :get}) do %>
  <div class="field">
  <%= select_tag("target_category", options_from_collection_for_select(@category, :id, :type_name))%>
  </div>
  <div class="field">
    <%= submit_tag "search"%>
  </div>
<% end %>